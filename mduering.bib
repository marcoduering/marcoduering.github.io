	keywords = {Aged, Female, Humans, Male, Middle Aged, Cadasil, Cognitive impairment, Hippocampus, Neuronal density, Vascular dementia white matter damage, Organ Size, Cognitive Dysfunction, CADASIL, Neurons},
	pages = {33--40},
}


	author = {Lopes, R. and Bournonville, C. and Kuchcinski, G. and Dondaine, T. and Mendyk, A. M. and Viard, R. and Pruvo, J. P. and Henon, H. and Georgakis, M. K. and Duering, M. and Dichgans, M. and Cordonnier, C. and Leclerc, X. and Bordet, R.},

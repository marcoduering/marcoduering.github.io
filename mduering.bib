@article{puy_cerebral_2017,
	title = {Cerebral {Microbleeds} and the {Risk} of {Incident} {Ischemic} {Stroke} in {CADASIL} ({Cerebral} {Autosomal} {Dominant} {Arteriopathy} {With} {Subcortical} {Infarcts} and {Leukoencephalopathy})},

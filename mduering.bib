	pmid = {38713890},
	pmcid = {PMC11177591},
	keywords = {Disease Progression, Female, Humans, Male, Prospective Studies, Follow-Up Studies, Magnetic Resonance Imaging, Risk Factors, Receptor, Notch3, Executive Function, Cerebral Small Vessel Diseases, CADASIL},
	pages = {e209310},
}

@article{li_meso-cortical_2024,

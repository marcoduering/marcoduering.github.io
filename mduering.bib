@article{rutten-jacobs_genetic_2018,
	title = {Genetic {Study} of {White} {Matter} {Integrity} in {UK} {Biobank} ({N}=8448) and the {Overlap} {With} {Stroke}, {Depression}, and {Dementia}},
	volume = {49},
	issn = {1524-4628 (Electronic) 0039-2499 (Linking)},

	author = {Seiler, S. and Pirpamer, L. and Hofer, E. and Duering, M. and Jouvent, E. and Fazekas, F. and Mangin, J. F. and Chabriat, H. and Dichgans, M. and Ropele, S. and Schmidt, R.},
	year = {2014},

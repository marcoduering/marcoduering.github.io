	number = {6},
	journal = {Neurology},
	author = {Yi, Fang and Jacob, Mina A. and Verhoeven, Jamie I. and Cai, Mengfei and Duering, Marco and Tuladhar, Anil Man and De Leeuw, Frank-Erik},

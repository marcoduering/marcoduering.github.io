@article{franzmeier_resting-state_2017,
	title = {Resting-{State} {Connectivity} of the {Left} {Frontal} {Cortex} to the {Default} {Mode} and {Dorsal} {Attention} {Network} {Supports} {Reserve} in {Mild} {Cognitive} {Impairment}},

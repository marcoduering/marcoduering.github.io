	pmcid = {PMC7185568},
	pmid = {32108259},
	keywords = {Diffusion Magnetic Resonance Imaging, Female, Humans, Aged, 80 and over, Neuroimaging, Magnetic Resonance Imaging, Caa, DWI+ lesions, Ischemia, Microinfarcts, Post-mortem MRI, Brain, Cerebral Hemorrhage, Cerebral Amyloid Angiopathy, Autopsy, CAA},

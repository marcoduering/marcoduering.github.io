@article{cerfontaine_association_2025,
	title = {Association {Between} {Vascular} {NOTCH3} {Aggregation} and {Disease} {Severity} in a {CADASIL} {Cohort} - {Implications} for {NOTCH3} {Variant}-{Specific} {Disease} {Prediction}},
